{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./cjs",
    "module": "commonjs",
    "target": "es2017",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": true,
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": false // This is a viral option, do not enable https://www.semver-ts.org/#module-interop
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/index.esm.node.ts", "./src/index.esm.worker.ts"]
}
